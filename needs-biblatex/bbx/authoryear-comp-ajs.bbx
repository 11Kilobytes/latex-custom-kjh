\RequireBibliographyStyle{authoryear}

\ExecuteBibliographyOptions{labelyear,sorting=nyt,pagetracker}

%% Language mapping to handle AJS style for Editors, edited by etc in bibliography
\DeclareLanguageMapping{american}{american-ajs} 

%% remove "In:" from journal and ed volumes.
\renewbibmacro*{in:}{%
  \bibstring{}}

%% bibmacro for " ... in ..." for incollection entries
\newbibmacro*{inc:}{%
  \bibstring{in}
  \setunit{\space}}   
 
%% bibmacro for Pp ... incollection
\newbibmacro*{incchapter+pages}{%
  \printfield{chapter}%
  \setunit{\addperiod\addspace\bibsentence}%
  \printfield{pages}%
  \newunit}


%% Author field needs period before year.
\renewbibmacro*{author}{%
  \ifthenelse{\ifuseauthor\AND\NOT\ifnameundef{author}}
    {\ifthenelse{\iffieldequals{fullhash}{\bbx@lasthash}\AND
                 \NOT\iffirstonpage}
       {\bibnamedash}
       {\savefield{fullhash}{\bbx@lasthash}%
        \printnames{author}%
	\iffieldundef{authortype}
	  {\setunit{\addperiod\space}}
	  {\setunit{\addcomma\space}}}%
     \iffieldundef{authortype}
       {}
       {\usebibmacro{authorstrg}%
	\setunit{\addperiod}}}%
    {\global\undef\bbx@lasthash
     \usebibmacro{labeltitle}%
     \setunit*{\addperiod}}%
  \usebibmacro{year+labelyear}}
 
\renewbibmacro*{year+labelyear}{%
  \iffieldundef{year}
    {}
    {%
       \printfield{year}%
       \printfield{labelyear}}}


